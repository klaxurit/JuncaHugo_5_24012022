{% extends "client/base.html.twig" %}

{% block title %}
	Liste des articles -
	{{parent()}}
{% endblock %}
{% block body %}
	<div class="article__preview-index">
	{% for post in posts %}
		<section class="article__preview">
			<p class="article__preview-title">{{ post.title }}</p>
			<hr class="article__preview-separator">
			<p class="article__preview-date">mise à jour le jeudi 10 février 2022</p>
			<p class="article__preview-author">Axurit - Title - Tag</p>
			<hr class="article__preview-separator">
			<p class="article__preview-chapo">{{ post.caption }}</p>
			<hr class="article__preview-separator">
			<button href="#" class="article__preview-button">plus</button>
		</section>
	{% endfor %}
	</div>


	{% include('/client/parts/_pagination.html.twig') %}
{% endblock %}
