{% extends "admin/base.html.twig" %}

{% block title %}
	Blog - Modification des informations de l'admin
{% endblock %}
{% block body %}
	<div class="admin-container">
		<h3 class="admin__manage-title">Update admin
		</h3>
		<form method="post" action="">
			<div class="form-group">
				<label for="description">Description</label>
				<textarea class="form-control admin__update-textarea" id="description" name="adminDesc">{{ admin.description }}</textarea>
				{% if errors['adminDesc'] is defined %}
					<p class="form_error">{{ errors['adminDesc'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="tagline">Tagline</label>
				<textarea class="form-control admin__update-textarea" id="tagline" name="tagline">{{ admin.tagline }}</textarea>
				{% if errors['tagline'] is defined %}
					<p class="form_error">{{ errors['tagline'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="firstname">Firstname</label>
				<input type="text" name="firstname" class="form-control" id="firstname" value="{{ admin.user.firstname }}">
				{% if errors['firstname'] is defined %}
					<p class="form_error">{{ errors['firstname'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="lastname">Lastname</label>
				<input type="text" name="lastname" class="form-control" id="lastname" value="{{ admin.user.lastname }}">
				{% if errors['lastname'] is defined %}
					<p class="form_error">{{ errors['lastname'] }}</p>
				{% endif %}
			</div>
						<div class="form-group">
				<label for="username">Username</label>
				<input type="text" name="username" class="form-control" id="username" value="{{ admin.user.username }}">
				{% if errors['username'] is defined %}
					<p class="form_error">{{ errors['username'] }}</p>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-primary">Modifier</button>
		</form>
	</div>
{% endblock %}