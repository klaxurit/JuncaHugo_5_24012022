{% extends "admin/base.html.twig" %}

{% block title %}
	Blog - Modification de l'admin
{% endblock %}
{% block body %}
	<div class="admin-container">
		<h3 class="admin__manage-title">Modification de l'admin
		</h3>
		<form enctype="multipart/form-data" method="post" action="">
			<div class="form-group">
				<label for="description">Description</label>
				<textarea name="description" class="form-control admin__update-textarea" id="description" >{{ admin.description }}</textarea>
				{% if errors['adminDesc'] is defined %}
					<p class="form_error">{{ errors['adminDesc'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="tagline">Présention</label>
				<textarea name="tagline" class="form-control admin__update-textarea" id="tagline" >{{ admin.tagline }}</textarea>
				{% if errors['tagline'] is defined %}
					<p class="form_error">{{ errors['tagline'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="firstname">Prénom</label>
				<input type="text" name="firstname" class="form-control" id="firstname" value="{{ admin.user.firstname }}">
				{% if errors['firstname'] is defined %}
					<p class="form_error">{{ errors['firstname'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="lastname">Nom</label>
				<input type="text" name="lastname" class="form-control" id="lastname" value="{{ admin.user.lastname }}">
				{% if errors['lastname'] is defined %}
					<p class="form_error">{{ errors['lastname'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="username">Pseudonyme</label>
				<input type="text" name="username" class="form-control" id="username" value="{{ admin.user.username }}">
				{% if errors['username'] is defined %}
					<p class="form_error">{{ errors['username'] }}</p>
				{% endif %}
			</div>
			<h5>Logo de l'admin:</h5>
			<img class="home__profile-logo" src="{{ uri ~ "uploads/" ~ admin.avatarUrl }}" alt="">
			<br>
			<input type="hidden" name="MAX_FILE_SIZE"/>
			Modifier:<br>
			<input type="file" name="avatar_url" id="fichier" accept="image/jpeg,image/gif,image/png,image/svg+xml"/><br>

			<h5 class="admin__manage-subtitle">Cv de l'admin:</h5>
			<p>{{ admin.cvUrl }}</p>
			<input type="hidden" name="MAX_FILE_SIZE"/>
			Modifier:<br>
			<input type="file" name="cv_url" id="fichier" accept="application/pdf"/><br>
			<br>
			<button type="submit" class="btn btn-primary">Modifier</button>
			<input type="button" class="btn btn-secondary" value="Retour" onClick="javascript:history.go(-1)" />
		</form>
	</div>
{% endblock %}