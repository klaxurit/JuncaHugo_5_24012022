{% extends "admin/base.html.twig" %}

{% block title %}
	Blog - Ajout d'un r√©seau social
{% endblock %}
{% block body %}
	<div class="admin-container">
		<h3 class="admin__manage-title">Create social
		</h3>
		<form method="post" action="">
			<div class="form-group">
				<label for="iconName">Icon name</label>
				<input type="text" name="iconName" class="form-control" id="iconName" value="{{ _post.iconName }}">
				{% if errors['iconName'] is defined %}
					<p class="form_error">{{ errors['iconName'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialUrl">Url</label>
				<input type="text" name="url" class="form-control" id="socialUrl" value="{{ _post.socialUrl }}">
				{% if errors['url'] is defined %}
					<p class="form_error">{{ errors['url'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialName">Name</label>
				<input type="text" name="name" class="form-control" id="socialName" value="{{ _post.socialName }}">
				{% if errors['name'] is defined %}
					<p class="form_error">{{ errors['name'] }}</p>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-primary">Ajouter</button>
		</form>
	</div>
{% endblock %}