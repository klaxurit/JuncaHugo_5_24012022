{% extends "admin/base.html.twig" %}

{% block title %}
{% if social is empty %}
	Blog - Ajout d'un réseau social
	{% else %}
	Blog - Modification d'un réseau social
{% endif %}

{% endblock %}
{% block body %}
	<div class="admin-container">
		<h3 class="admin__manage-title">Update social
		</h3>
		<form method="post" action="">
			<div class="form-group">
				<label for="iconName">Icon name</label>
				{% if social is empty %}
				<input type="text" name="iconName" class="form-control" id="iconName" value="{{ _post.iconName }}">
				{% else %}
				<input type="text" name="iconName" class="form-control" id="iconName" value="{{ social.iconName }}">
				{% endif %}
				{% if errors['iconName'] is defined %}
					<p class="form_error">{{ errors['iconName'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialUrl">Url</label>
				{% if social is empty %}
				<input type="text" name="url" class="form-control" id="socialUrl" value="{{ _post.socialUrl }}">
				{% else %}
				<input type="text" name="url" class="form-control" id="socialUrl"  value="{{ social.url }}">
				{% endif %}
				{% if errors['socialUrl'] is defined %}
					<p class="form_error">{{ errors['socialUrl'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialName">Name</label>
				{% if social is empty %}
				<input type="text" name="name" class="form-control" id="socialName" value="{{ _post.socialName }}">
				{% else %}
				<input type="text" name="name" class="form-control" id="socialName" value="{{ social.name }}">
				{% endif %}
				{% if errors['socialName'] is defined %}
					<p class="form_error">{{ errors['socialName'] }}</p>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-primary">Modifier</button>
		</form>
	</div>
{% endblock %}