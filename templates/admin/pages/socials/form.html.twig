{% block body %}
	<form method="post" action="">
		<div class="form-group">
			<label for="iconName">Nom de l'icône*</label>
			<input type="text" name="iconName" class="form-control" id="iconName" value="{{ social is empty ? _post.iconName : social.iconName }}">
			<p class="social__info">*Chercher votre icône sur https://icones.js.org/ et cliquez dessus pour obtenir le nom de celui-ci.<br>Un exemple de nom d'icône, pour instagram: icon-park-outline:instagram
			</p>
			{% if errors['iconName'] is defined %}
				<p class="form_error">{{ errors['iconName'] }}</p>
			{% elseif errors['iconNameMaxChars'] is defined %}
				<p class="form_error">{{ errors['iconNameMaxChars'] }}</p>
			{% endif %}
		</div>
		<div class="form-group">
			<label for="socialUrl">Url</label>
			<input type="text" name="url" class="form-control" id="socialUrl" value="{{ social is empty ? _post.url : social.url }}">
			{% if errors['url'] is defined %}
				<p class="form_error">{{ errors['url'] }}</p>
			{% endif %}
		</div>
		<div class="form-group">
			<label for="socialName">Nom du réseau social</label>
			<input type="text" name="name" class="form-control" id="socialName" value="{{ social is empty ? _post.name : social.name }}">
			{% if errors['name'] is defined %}
				<p class="form_error">{{ errors['name'] }}</p>
			{% elseif errors['socialNameMaxChars'] is defined %}
				<p class="form_error">{{ errors['socialNameMaxChars'] }}</p>
			{% endif %}
		</div>
		<button type="submit" class="btn btn-primary">{{ post is empty ? "Ajouter" : "Modifier" }}</button>
		<input type="button" class="btn btn-secondary" value="Retour" onClick="javascript:history.go(-1)" />
	</form>
{% endblock %}
