{% extends "admin/base.html.twig" %}

{% block title %}
{% if social is empty %}
	Blog - Ajout d'un réseau social
	{% else %}
	Blog - Modification d'un réseau social
{% endif %}

{% endblock %}
{% block body %}
	<div class="admin-container">
	{% if social is empty %}
		<h3 class="admin__manage-title">Create socialUpdate social
		</h3>
	{% else %}
			<h3 class="admin__manage-title">Update social
		</h3>
	{% endif %}
			{# place le form dans un fichier _form et creer une page create et update #}
		<form method="post" action="">
			<div class="form-group">
				<label for="iconName">Icon name*</label>
				<input type="text" name="iconName" class="form-control" id="iconName" value="{{ social is empty ? _post.iconName : social.iconName }}">
				<p class="social__info">*To find the "Icon name" go on https://icones.js.org/ and click on the icon needed.<br>Example for instagram logo: icon-park-outline:instagram </p>
				{% if errors['iconName'] is defined %}
					<p class="form_error">{{ errors['iconName'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialUrl">Url</label>
				<input type="text" name="url" class="form-control" id="socialUrl" value="{{ social is empty ? _post.url : social.url }}">
				{% if errors['url'] is defined %}
					<p class="form_error">{{ errors['url'] }}</p>
				{% endif %}
			</div>
			<div class="form-group">
				<label for="socialName">Name</label>
				<input type="text" name="name" class="form-control" id="socialName" value="{{ social is empty ? _post.name : social.name }}">
				{% if errors['name'] is defined %}
					<p class="form_error">{{ errors['name'] }}</p>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-primary">Modifier</button>
		</form>
	</div>
{% endblock %}