{% extends "admin/base.html.twig" %}

{% block title %}
	Blog - Gestion des articles
{% endblock %}
{% block body %}
<div class="admin-container">
  <h3>Gestion</h3>
  <table class="table table-striped">
    <thead>
      <th>Titre</th>
      <th>Actions</th>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
        <td>{{ post.title }}</td>
        <td class="mt-2 pt-2">
          <a href="#" class="btn btn-sm btn-warning update__button">Modifier</a>
          <a href="#" class="btn btn-sm btn-danger">Supprimer</a>
        </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}