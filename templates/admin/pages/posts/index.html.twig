{% extends "admin/base.html.twig" %}

{% block title %}
	Blog - Gestion des articles
{% endblock %}
{% block body %}
	<div class="admin-container">
		<h3 class="admin__manage-title">Gestion des article</h3>
		<a href="/admin/posts/create" class="btn btn-sm btn-primary mb-4">Ajouter un article</a>
		<table class="table table-striped">
			<thead>
				<th>Titre</th>
				<th>Actions</th>
			</thead>
			<tbody>
				{% for post in posts %}
					<tr>
						<td>{{ post.title }}</td>
						<td class="mt-2 pt-2">
							<a href="/admin/posts/update/{{ post.id }}" class="btn btn-sm btn-warning update__button">Modifier</a>
							<a href="/admin/posts/delete/{{ post.id }}" onclick="return confirm('Ettes-vous sÃ»r de vouloir supprimer cet article ?')" class="btn btn-sm btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
